<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/colorSurfaceVariant">

    <!-- 顶部应用栏 (MD3风格) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurfaceContainerHigh"
        app:title="@string/app_name"
        app:titleTextColor="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:titleCentered="true"/>

    <!-- 设置卡片 (MD3 Elevated Card) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        app:cardElevation="6dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
        app:cardBackgroundColor="?attr/colorSurfaceContainerHigh">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 带图标的标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_img2"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模块设置"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <!-- 现代开关控件 (MD3 Switch) -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_enable_module"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="启用模块功能"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:checked="true"
                app:useMaterialThemeColors="true"/>

            <!-- 大按钮 (MD3 Filled Tonal) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="高级设置"
                style="@style/Widget.Material3.Button.TonalButton"
                app:icon="@drawable/ic_settings"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 日志卡片 (MD3 Outlined Card) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_log"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_settings"
        app:layout_constraintBottom_toTopOf="@id/btn_group_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="0dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 日志标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运行日志"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"/>

            <!-- 日志内容区域 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:background="?attr/colorSurfaceContainerLow">

                <TextView
                    android:id="@+id/tv_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4sp"
                    android:textIsSelectable="true"
                    android:fontFamily="monospace" />
            </ScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 底部按钮组 (FAB风格) -->
    <LinearLayout
        android:id="@+id/btn_group_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 清空日志按钮 -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="清除日志"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_delete"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            android:textColor="@color/colorOnSurface"
            app:strokeColor="?attr/colorOutline"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>

        <!-- 关于按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="关于"
            android:layout_marginLeft="6dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_info"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            android:textColor="@color/colorOnSurface"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>