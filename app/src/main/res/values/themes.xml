<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.XposedModule" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_surface_container</item>
    </style>
    <style name="Theme.MyApp" parent="Theme.Material3.DayNight">
        <!-- 自定义主题属性 -->
    </style>

    <!-- 对话框样式 -->
    <style name="ThemeOverlay.MyApp.Dialog.Center" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.MyApp.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.MyApp.Body</item>
    </style>

    <!-- 文本外观样式 -->
    <style name="TextAppearance.MyApp.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.MyApp.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

</resources>